{
  "name": "Usuario",
  "plural": "Usuarios",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "active": {
      "type": "boolean",
      "required": "false",
      "default": "true"
    },
    "registro": {
      "type": "date",
      "required": "true"
    },
    "telefono": {
      "type": "string",
      "required": "false"
    },
    "imagen": {
      "type": "string",
      "required": "false"
    },
    "meta": {
      "type": "number",
      "required": "false"
    }
  },
  "validations": [],
  "relations": {
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "setPass": {
      "accepts": [
        {
          "arg": "sendPass",
          "type": "object",
          "required": true,
          "description": "id y la nueva pass"
        }
      ],
      "returns": [
        {}
      ],
      "description": "asignar una nueva contrase√±a",
      "http": [
        {
          "path": "/setPass",
          "verb": "post"
        }
      ]
    },
    "prototype.changeProfileImage": {
      "accepts": [
        {
          "arg": "newImage",
          "type": "object",
          "required": true,
          "description": "new image in base 64",
          "http": {
            "source": "body"
          }
        }
      ],
      "returns": [
        {
          "arg": "updatedUser",
          "type": "object",
          "root": true,
          "description": "updated user from db"
        }
      ],
      "description": "changes the user's prifile image for a new one",
      "http": [
        {
          "path": "/changeProfileImage",
          "verb": "post"
        }
      ]
    },
    "prototype.setImage": {
      "accepts": [
        {
          "arg": "newImage",
          "type": "object",
          "required": true,
          "description": "image to save",
          "http": {
            "source": "body"
          }
        }
      ],
      "returns": [
        {
          "arg": "product",
          "type": "object",
          "root": true,
          "description": "Updated product"
        }
      ],
      "description": " Add Image to a product ",
      "http": [
        {
          "path": "/setImage",
          "verb": "post"
        }
      ]
    }
  }
}
